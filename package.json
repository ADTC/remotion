{
  "name": "remotion",
  "version": "2.6.7",
  "private": true,
  "license": "SEE LICENSE IN LICENSE.md",
  "scripts": {
    "test": "turbo run lint test --concurrency=4",
    "lint": "turbo run lint",
    "build": "turbo run build",
    "ci": "turbo run build lint test --concurrency=2",
    "ci:windows": "turbo run build lint test --concurrency=1",
    "watch": "pnpm run watch --recursive --stream --parallel",
    "testlambda": "npx jest --runInBand --root-dir=tests/lambda --setup-files=../../packages/lambda/src/test/setup.ts && cd packages/lambda && npm run testintegration",
    "testssr": "npx jest --runInBand --root-dir=tests/ssr --setup-files=../../packages/lambda/src/test/setup.ts",
    "release": "lerna publish --force-publish",
    "postinstall": "lerna bootstrap"
  },
  "engines": {
    "node": ">=12",
    "pnpm": ">=3"
  },
  "devDependencies": {
    "remotion": "2.6.7"
  },
  "dependencies": {
    "lerna": "^4.0.0",
    "turbo": "^1.1.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@6.26.1"
}
